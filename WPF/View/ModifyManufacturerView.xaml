<Window x:Class="WPF.View.ModifyManufacturerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.View"
        mc:Ignorable="d"
        Title="ModifyManufacturerView" Height="437.074" Width="582.94">
    <Grid Background="Lavender">
        <Label Content="Modify manufacturer" HorizontalAlignment="Center" FontSize="35" Foreground="Red" FontWeight="ExtraBold"></Label>
        <Label Content="Name" HorizontalAlignment="Left" FontSize="35" Foreground="Red" Margin="10,88,0,263.2" Width="254"></Label>
        <TextBox Text="{Binding Manufacturer.ManufacturerName}" FontSize="30" Margin="211,88,153.8,263.2"></TextBox>
        <Button Content="Modify" Command="{Binding ModifyComm}" BorderThickness="4" Background="DarkRed" Foreground="LightBlue" FontSize="20" Margin="431,320,9.8,10.2" FontWeight="ExtraBold"></Button>
        <Label Content="{Binding Error}" HorizontalAlignment="Left" FontSize="15" FontWeight="ExtraBold" Margin="28,282,0,10.2" Width="395"></Label>
    </Grid>
</Window>
