<Window x:Class="WPF.View.AddOwnerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.View"
        mc:Ignorable="d"
        Title="AddOwnerView" Height="446.4" Width="600">
    <Grid Background="Lavender">
        <Label Content="Add owner" HorizontalAlignment="Center" FontSize="35" Foreground="Red" FontWeight="ExtraBold"></Label>
        <Label Content="Name" HorizontalAlignment="Left" FontSize="35" Foreground="Red" Margin="10,97,0,249.8" Width="218"></Label>
        <TextBox Text="{Binding Owner.OwnerName}" FontSize="30" Margin="228,97,110.6,266.8"></TextBox>
        <Label Content="Surname" HorizontalAlignment="Left" FontSize="35" Foreground="Red" Margin="10,172,0,175.8" Width="218"></Label>
        <TextBox Text="{Binding Owner.OwnerSurname}" FontSize="30" Margin="228,172,110.6,193.8"></TextBox>
        <Button Content="Add" Command="{Binding AddComm}" BorderThickness="4" Background="DarkRed" Foreground="LightBlue" FontSize="20" Margin="460,326,9.6,9.8" FontWeight="ExtraBold"></Button>
        <Label Content="{Binding Error}" HorizontalAlignment="Left" FontSize="10" FontWeight="ExtraBold" Margin="10,276,0,9.8" Width="463"></Label>
    </Grid>
</Window>
